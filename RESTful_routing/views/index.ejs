<%- include('partials/header') %>
<div class="container main">
  <% allBlogs.map(blog => { %>
  <h2><%= blog.title %></h2>
  <div class="ui large image">
    <img src="<%= blog.image%>" alt="" />
  </div>
  <span><%= blog.created %> </span>
  <p><%= blog.body.substring(0, 100) %>...</p>
  <a href="/blogs/<%= blog.id %>">Read More</a>
  <% }) %>
</div>
<%- include('partials/footer') %>
